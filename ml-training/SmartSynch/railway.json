{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "python -m pip install --no-cache-dir -r requirements.txt",
    "nixpacksPlan": {
      "python": "3.11"
    }
  },
  "deploy": {
    "startCommand": "python -m uvicorn smartsynch.api.main:app --host 0.0.0.0 --port $PORT",
    "healthcheckPath": "/api/smartsynch/v1/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE"
  }
}
